# Meta/WhatsApp
META_VERIFY_TOKEN=tu_token_aqui
META_ACCESS_TOKEN=tu_token_aqui
META_PHONE_NUMBER_ID=tu_phone_number_id

# OpenAI
OPENAI_API_KEY=tu_api_key_aqui

# Encriptación para módulo de integraciones (32 bytes en hex = 64 caracteres)
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here_generate_with_cryptonAI

# Email (opcional)
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_aqui

# JWT Secret (cambiar en producción)
JWT_SECRET=neural_secret_key_change_in_production

# Frontend URL (para CORS - opcional)
